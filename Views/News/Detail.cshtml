@model LidyCms.Model.News
@{
    ViewBag.Title = "新闻";
}
@section AddToHead{
    <link href="@Url.Content("/Content/Css/jquery.mCustomScrollbar.css")" rel="stylesheet" type="text/css" />
}
<div class="main_body bg3">
    <div class="c1200 newscontent">
     <p class="position">
            <span><a href="@Url.Action("Index","Index")">首页</a></span>&gt;
            <span><a href="@Url.Action("Index","News")">星恒星资讯</a></span>&gt;
            <span>@Model.Title</span>
     </p>
        <!-- 新闻内容 -->
        <div class="newsdatail">
            <span id="Titles">@Model.Title</span> | <span id="AddTime">
                @Model.AddTime.ToShortDateString()</span>
        </div>
        <div class="main giftmain" id="newscontent">
              @Html.Raw(Model.Content)
            <!--dv_scroll_bar end-->
        </div>
        <div class="clear">
        </div>
    </div>
</div>
<script src="@Url.Content("~/Content/Scripts/jquery.slideBox.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Scripts/jquery.mCustomScrollbar.concat.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    //滚动条
    $("#newscontent").mCustomScrollbar({
        scrollButtons: {
            enable: true
        }
    });
</script>
