@model List<LidyCms.Model.Pictures>
@{
    ViewBag.Title = "产品系列";
}
@section AddToHead{
    <link href="@Url.Content("/Content/Css/jquery.fancybox-1.3.4.css")" rel="stylesheet" type="text/css" />
}
<div class="main_body bg3">
    <div class="c1200 gift product">
                <div class="title">
                <img alt="" src="@ViewBag.TopUrl" />
            </div>
        <div class="main_left">
            <ul class="">
                <li class="title on"><a href="#">产品系列</a></li>
                <li class="@(ViewBag.Call == "16" ? "on" : "")"><a href="@Url.Action("Index", "Product", new { id = 16 })">缘份星空系列</a></li>
                <li class="@(ViewBag.Call == "17" ? "on" : "")"><a href="@Url.Action("Index", "Product", new { id = 17 })">爱之印象系列</a></li>
                <li class="@(ViewBag.Call == "18" ? "on" : "")"><a href="@Url.Action("Index", "Product", new { id = 18 })">尚美系列</a></li>
                <li class="@(ViewBag.Call == "19" ? "on" : "")"><a href="@Url.Action("Index", "Product", new { id = 19 })">梦幻公主系列</a></li>
                <li class="title on"><a href="#">品种</a></li>
                <li class="@(ViewBag.Call == "20" ? "on" : "")"><a href="@Url.Action("Index", "Product", new { id = 20 })">吊坠</a></li>
                <li class="@(ViewBag.Call == "21" ? "on" : "")"><a href="@Url.Action("Index", "Product", new { id = 21 })">耳饰</a></li>
                <li class="@(ViewBag.Call == "22" ? "on" : "")"><a href="@Url.Action("Index", "Product", new { id = 22 })">戒指</a></li>
            </ul>
        </div>
        <!-- 右边产品列表 -->
        <div class="main_right">
                <ul>
                @foreach (var pic in Model)
                {
                      <li><a rel="example_group" href="@pic.PicturesAlbums[0].ImgUrl" title="@pic.Title"><img alt="" src="@pic.ImgUrl" /></a></li>
                }
                </ul>
        </div>
        <div class="clear">
        </div>
    </div>
</div>
<script src="../../Content/Scripts/jquery.mousewheel-3.0.4.js" type="text/javascript"></script>
<script src="../../Content/Scripts/jquery.easing-1.3.pack.js" type="text/javascript"></script>
<script src="../../Content/Scripts/jquery.fancybox-1.3.4.js" type="text/javascript"></script>
<script  type="text/javascript">
    $("a[rel=example_group]").fancybox({
        'transitionIn': 'none',
        'transitionOut': 'none',
        'titlePosition': 'over',
        'titleFormat': function (title, currentArray, currentIndex, currentOpts) {
            return '<span id="fancybox-title-over">产品展示 ' + (currentIndex + 1) + ' / ' + currentArray.length + (title.length ? ' &nbsp; ' + title : '') + '</span>';
        }
    });
</script>